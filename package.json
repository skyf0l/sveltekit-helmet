{
  "name": "sveltekit-helmet",
  "author": "Skyf0l <skyf0lmails@proton.me>",
  "description": "Security header middleware collection for SvelteKit",
  "license": "MIT",
  "version": "2.0.1",
  "main": "./lib/index.js",
  "type": "module",
  "files": [
    "lib/**/*"
  ],
  "scripts": {
    "build": "tsc --project tsconfig.build.json",
    "lint": "eslint .",
    "format": "prettier --write .",
    "test:watch": "jest --watch",
    "test": "jest --coverage",
    "test:e2e": "npm --prefix e2e/ run test:e2e",
    "test:e2e:install": "npm --prefix e2e/ install && npm --prefix e2e/ exec playwright install --with-deps",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "sveltekit",
    "helmet",
    "security",
    "headers",
    "x-frame-options",
    "csp",
    "hsts",
    "clickjack"
  ],
  "repository": {
    "url": "https://github.com/skyf0l/sveltekit-helmet"
  },
  "engines": {
    "node": ">=18.0"
  },
  "dependencies": {
    "helmet": "^8.0.0"
  },
  "devDependencies": {
    "@sveltejs/kit": "^2.6.1",
    "@types/jest": "^29.5.13",
    "@typescript-eslint/eslint-plugin": "^8.8.0",
    "@typescript-eslint/parser": "^8.8.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "jest": "^29.7.0",
    "prettier": "^3.3.3",
    "ts-jest": "^29.2.5",
    "typescript": "^5.6.2"
  }
}
